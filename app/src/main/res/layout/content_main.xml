<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/logo_new" />

        <TextView
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:background="#FF0"
            android:padding="3dp"
            android:rotation="-3"
            android:text="PLASTIC IS NOT WASTE"
            android:textColor="#3d3d3d"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#FF0"
            android:padding="3dp"
            android:rotation="-3"
            android:text="ITS RECYCLABLE RESOURCE"
            android:textColor="#3d3d3d"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button42"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@color/transparent"
            android:text="Truth about Plastic Recycling"
            android:textColor="@color/fadedGreen" />

        <Button
            android:id="@+id/button43"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:text="About Bottles for Change"
            android:textColor="@color/fadedGreen" />

        <Button
            android:id="@+id/button"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/orangeregister"
            android:text="Register with us" />

        <Button
            android:id="@+id/button2"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/blueLogin"
            android:text="Login"
            android:textColor="@color/textcolor" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/toll_free_no" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Click to share app" />

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_share" />

        <Button
            android:id="@+id/faq"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/transparent"
            android:text="FAQ"
            android:textColor="@color/textcolor" />
    </LinearLayout>

</ScrollView>