<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/logo_new" />

            <TextView
                android:id="@+id/text_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                android:background="#FF0"
                android:padding="3dp"
                android:rotation="-3"
                android:text="PLASTIC IS NOT WASTE"
                android:textColor="#3d3d3d"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_view123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FF0"
                android:padding="3dp"
                android:rotation="-3"
                android:text="ITS RECYCLABLE RESOURCE"
                android:textColor="#3d3d3d"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonttapr"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:background="@color/transparent"
                android:text="Truth about Plastic Recycling"
                android:textColor="@color/fadedGreen" />

            <Button
                android:id="@+id/buttonabfc"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:text="About Bottles for Change"
                android:textColor="@color/fadedGreen" />

            <Button
                android:id="@+id/button14"
                android:layout_width="322dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Submit Plastic" />

            <Button
                android:id="@+id/button15"
                android:layout_width="322dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:text="View Plastic Submitted"
                android:textColor="@color/fadedGreen" />

            <Button
                android:id="@+id/button16"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:text="View Tickets"
                android:textColor="@color/fadedGreen" />

            <Button
                android:id="@+id/button17"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:text="Score Card"
                android:textColor="@color/fadedGreen" />

            <Button
                android:id="@+id/buttonFb"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:text="Click for Feedback"
                android:textColor="@color/fadedGreen" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:text="Logout"
                android:textColor="@color/fadedGreen" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>