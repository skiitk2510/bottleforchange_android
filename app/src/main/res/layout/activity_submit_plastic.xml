<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Search Plastic Agent in 2 ways :"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button26"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/redPincode"
            android:text="Search By Pincode"
            android:textAllCaps="false"
            android:textColor="@color/textcolor" />

        <Button
            android:id="@+id/button27"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@color/blueDroppin"
            android:text="Drop a Pin"
            android:textAllCaps="false"
            android:textColor="@color/textcolor" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="For any queries or complaint :"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button38"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@color/transparent"
            android:text="Call our toll free number: 18001211007" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="or"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button39"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@color/transparent"
            android:text="Submit Feedback"
            android:textColor="@color/fadedGreen" />


    </LinearLayout>

</ScrollView>